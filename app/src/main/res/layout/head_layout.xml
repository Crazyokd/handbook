<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF00">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取之有度，用之有节！希望我们的每一分钱都可以用在对的地方。"
            android:textColor="#4B0082"
            android:textSize="23sp"
            />
        <ImageView
            android:id="@+id/income_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="86dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_income_foreground"
            />
        <ImageView
            android:id="@+id/expense_iv"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_expense_foreground"
            />

        <TextView
            android:id="@+id/expense_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_toRightOf="@id/expense_iv"
            android:text="本月支出："
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/income_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/income_iv"
            android:text="本月收入："
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_alignParentRight="true"
            android:text="1000"
            android:layout_marginRight="40dp"
            android:textColor="#FF0000"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="87dp"
            android:layout_marginRight="40dp"
            android:text="本月(1000)"
            android:textColor="#000000"
            android:textSize="15sp"
            />
</RelativeLayout>